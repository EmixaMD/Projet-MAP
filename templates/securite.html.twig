{% extends 'layout.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('build/css/front.css') }}">
<link rel="stylesheet" href="{{ asset('build/css/securite.css') }}">
<link rel="stylesheet" href="{{ asset('build/css/tablette.css') }}">
{% endblock %}


{% block page_content %}
<h1 class="mt-4 text-center">{{ "securite.h1"|trans }}</h1>
{# Mise en place d'un carousel Bootstrap pour les consignes de sécurité #}
<section class="monCarouss mt-5">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active" id="slide1">
            <img class="d-block " src="/uploads/casque.jpg" alt="First slide">
        </div>
        <div class="carousel-item" id="slide2">
            <img class="d-block " src="/uploads/gant.jpg" alt="Second slide">
        </div>
        <div class="carousel-item" id="slide3">
            <img class="d-block " src="/uploads/secu.jpg" alt="Third slide">
        </div>
        <div class="carousel-item" id="slide3">
            <img class="d-block " src="/uploads/lunette.jpg" alt="Fourth slide">
        </div>
        <div class="carousel-item" id="slide4">
            <img class="d-block " src="/uploads/securite.jpg" alt="Fifth slide">
        </div>
        <div class="carousel-item" id="slide5">
            <form class=" text-center" method="GET" action="{{ path ('formulaire_index') }}">
    {# CheckBox Bootstrap confirmation connaissance des règles de sécurité #}
                <div class="form-group form-check">
                    <input type="checkbox" required class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1" class="conditionsecurite">{{ "securite.checkbox"|trans }}</label>
                </div>
                <button id="buttonvue2form" type="submit" class="btn btn-success" >{{"securite.valid"|trans }}</button>
            </form>
        </div>
    </div>
    <a class="carousel-control-prev" id="left" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">{{ "securite.previous"|trans }}</span>
    </a>
    <a class="carousel-control-next" id="right" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">{{ "securite.next"|trans }}</span>
</a>
    </div>
</section>

{% endblock page_content %}
 

{% block javascripts %}
{% endblock %}