{% extends 'layout.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('build/css/front.css') }}">
{% endblock %}


{% block page_content %}
<h1 class="mt-4 text-center">Consigne de securité</h1>
{# Mise en place d'un carousel Bootstrap pour les consignes de sécurité #}
<section class="monCarouss mt-5">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block " src="/uploads/casque.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block " src="/uploads/gant.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block " src="/uploads/secu.jpg" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block " src="/uploads/lunette.jpg" alt="Fourth slide">
        </div>
        <div class="carousel-item">
            <img class="d-block " src="/uploads/securite.jpg" alt="Fifth slide">
        </div>
        <div class="carousel-item">
            <form class=" text-center">
    {# CheckBox Bootstrap confirmation connaissance des règles de sécurité #}
                <div class="form-group form-check">
                    <input type="checkbox" required class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1" class="conditionsecurite">En cochant cette case, j'atteste avoir bien pris connaissance des règles de sécurité et m'engage à les respecter tout au long de ma visite</label>
                </div>
                <button id="buttonvue2form" type="button" class="btn btn-success"><a class="valid-consign-secu" href=" {{ path ('home_index') }}">Valider</a></button>
            </form>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
</a>
    </div>
</section>
<footer class="background-securite">
</footer>

{% endblock page_content %}
 

{% block javascripts %}
{% endblock %}