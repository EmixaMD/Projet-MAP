{% extends 'base.html.twig' %}

{% block title %}Employe index{% endblock %}

{% block body %}
    <h1>Employe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>serviceEmploye</th>
                <th>Sexe</th>
                <th>dateNaissance</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for employe in employes %}
            <tr>
                <td>{{ employe.id }}</td>
                <td>{{ employe.nom }}</td>
                <td>{{ employe.prenom }}</td>
                <td>{{ employe.serviceEmploye }}</td>
                <td>{{ employe.sexe }}</td>
                <td>{{ employe.dateNaissance ? employe.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ employe.telephone }}</td>
                <td>{{ employe.email }}</td>
                <td>
                    <a href="{{ path('admin_employe_show', {'id': employe.id}) }}">show</a>
                    <a href="{{ path('admin_employe_edit', {'id': employe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_employe_new') }}">Create new</a>
{% endblock %}
