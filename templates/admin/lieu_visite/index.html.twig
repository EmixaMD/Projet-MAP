{% extends 'admin/admin_layout.html.twig' %}

{% block title %}Paramétrage lieu de visite{% endblock %}

{% block page_content  %}
    <h1>Paramétrage lieu de visite</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lieu_visite in lieu_visites %}
            <tr>
                
                <td>{{ lieu_visite.nom }}</td>
                <td>
                    <form method="post" action="{{ path('admin_lieu_visite_delete', {'id': lieu_visite.id}) }}" onsubmit="return confirm('Confirmez-vous la suppression {{ lieu_visite.nom}}?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lieu_visite.id) }}">
                    <button id="btntrash" class="btn"><i class="fa fa-trash"></i></button>
                    </form>
                    <a class="btn" id="btnupdate" href="{{ path('admin_lieu_visite_edit', {'id': lieu_visite.id}) }}"><i class="fas fa-pen-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_lieu_visite_new') }}">Créer un nouveau lieu de visite</a>
{% endblock %}
